<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @task.title %>
</p>

<p>
  <b>Description:</b>
  <%= @task.description %>
</p>

<p>
  <b>Status:</b>
  <%= @task.status %>
</p>

<p>
  <b>Due date:</b>
  <%= @task.due_date %>
</p>

<p>
  <b>Created by:</b>
  <%= @task.user.email %>
</p>

<p>
  <b>Employer:</b>
  <%= @task.employer %>
</p>

<p>
  <b>Comment:</b>
  <%= @task.comment %>
</p>

<p>
  <% @task.notes.each do |note| %>
  	<p>
  		<%= note.user.email %> says <%= note.description %>
  	</p>
  <% end %>
</p>

<%= render 'notes/form' %>

<%= link_to 'Edit', edit_task_path(@task) %> |
<%= link_to 'Back', tasks_path %>
